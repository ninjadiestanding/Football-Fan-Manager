<Window x:Class="Football_Fan_Manager.Windows.Clubs.UpdateClubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Football_Fan_Manager.Windows.Clubs"
        mc:Ignorable="d"
        Title="Edit club" Height="150" Width="240"
        Background="LightBlue"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas>

            <Label Content="Name:" FontSize="15" Canvas.Top="5" Canvas.Left="5" />
            <TextBox Name="NameTextBox" Canvas.Left="60" Canvas.Top="10" Width="150" Height="20"/>

            <Label Content="City:" FontSize="15" Canvas.Top="35" Canvas.Left="5" />
            <TextBox Name="CityTextBox" Canvas.Left="60" Canvas.Top="40" Width="150" Height="20" />

            <Button Click="Save_Button_Click" Content="Save" FontSize="13" Canvas.Left="110" Canvas.Top="75" Width="50" />
            <Button Click="Cancel_Button_Click" Content="Cancel" FontSize="13" Canvas.Left="160" Canvas.Top="75" Width="50" />

        </Canvas>
    </Grid>
</Window>
