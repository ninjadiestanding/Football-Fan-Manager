<Window x:Class="Football_Fan_Manager.Windows.Clubs.DisplayClubsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Football_Fan_Manager.Windows.Clubs"
        mc:Ignorable="d"
        Title="Clubs" Height="360" Width="350"
        Background="LightBlue"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas>

            <Label FontSize="20" Canvas.Left="5">Football clubs</Label>

            <Button Content="Add" Canvas.Left="10" Canvas.Top="35" Click="AddClub_Button_Click" />
            <Button Content="Edit" Canvas.Left="37" Canvas.Top="35" Click="EditClub_Button_Click" />
            <Button Content="Delete" Canvas.Left="62" Canvas.Top="35" Click="DeleteClub_Button_Click" />
            <Button Content="Players" Canvas.Left="269" Canvas.Top="35" Click="ClubPlayers_Button_Click" />

            <DataGrid x:Name="ClubsDataGrid" ItemsSource="{Binding Club}" Width="300" Height="200" Canvas.Top="60" Canvas.Left="10" 
                          AutoGenerateColumns="False" IsReadOnly="True" SelectionUnit="FullRow" CanUserResizeColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="30" />
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150" />
                    <DataGridTextColumn Header="City" Binding="{Binding City}" Width="111" />
                </DataGrid.Columns>
            </DataGrid>

            <Button Content="Close" Canvas.Left="277" Canvas.Top="287" Click="Close_Button_Click" />

        </Canvas>
    </Grid>
</Window>
